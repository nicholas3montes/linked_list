<h1>Lista</h1>

<div class="text-center btn btn-light">
  <table>
    <tbody> 
        <% for n in 0..@list.size-1 do %>
          <tr>
            <td><%= @list.get(n) %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
  <button type="button" class="btn btn-dark"><%= link_to "Novo texto", new_text_path %>
</div>